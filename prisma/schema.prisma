// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// User model for NextAuth
model User {
  id                String    @id @default(uuid())
  email             String    @unique
  emailVerified     DateTime?
  password          String // hashed password
  fullName          String?
  avatarUrl         String?
  subscriptionTier  String    @default("free") // free, pro, premium
  stripeCustomerId  String?   @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  accounts Account[]
  sessions Session[]
  panels   Panel[]

  @@map("users")
}

// NextAuth Account model
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session model
model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Panels (a user can have multiple properties/panels)
model Panel {
  id           String   @id @default(uuid())
  userId       String
  name         String
  address      String?
  brand        String // square_d, siemens, ge, eaton, murray, other
  mainAmperage Int // 100, 150, 200, 400
  totalSlots   Int      @default(40)
  columns      Int      @default(2) // Most are 2-column
  notes        String?
  coverPhotoUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  breakers Breaker[]
  floors   Floor[]

  @@map("panels")
}

// Breakers
model Breaker {
  id             String   @id @default(uuid())
  panelId        String
  position       String // "1", "1-3" for double, "5-7" for triple
  amperage       Int // 15, 20, 30, 40, 50, 60, 100, 200
  poles          Int      @default(1) // 1, 2, 3
  label          String
  circuitType    String   @default("general") // general, lighting, appliance, hvac, outdoor, other
  protectionType String   @default("standard") // standard, gfci, afci, dual_function
  isOn           Boolean  @default(true)
  notes          String?
  sortOrder      Int?
  createdAt      DateTime @default(now())

  // Relations
  panel   Panel    @relation(fields: [panelId], references: [id], onDelete: Cascade)
  devices Device[]

  @@map("breakers")
}

// Floors
model Floor {
  id             String   @id @default(uuid())
  panelId        String
  name           String
  level          Int
  floorPlanData  Json? // Optional custom layout data
  createdAt      DateTime @default(now())

  // Relations
  panel          Panel           @relation(fields: [panelId], references: [id], onDelete: Cascade)
  rooms          Room[]
  walls          Wall[]
  floorPlanImage FloorPlanImage?

  @@map("floors")
}

// Walls define the boundaries of rooms and the floor plan
model Wall {
  id         String   @id @default(uuid())
  floorId    String
  startX     Float    // Start point X (in feet)
  startY     Float    // Start point Y (in feet)
  endX       Float    // End point X (in feet)
  endY       Float    // End point Y (in feet)
  thickness  Float    @default(0.5) // Wall thickness in feet
  isExterior Boolean  @default(false)
  createdAt  DateTime @default(now())

  // Relations
  floor    Floor     @relation(fields: [floorId], references: [id], onDelete: Cascade)
  openings Opening[]

  @@map("walls")
}

// Openings are doors/windows in walls
model Opening {
  id       String  @id @default(uuid())
  wallId   String
  type     String  // 'door', 'window', 'archway'
  position Float   // Position along wall (0-1, percentage from start)
  width    Float   // Opening width in feet
  height   Float?  // Optional height for windows

  // Relations
  wall Wall @relation(fields: [wallId], references: [id], onDelete: Cascade)

  @@map("openings")
}

// Background images for tracing floor plans
model FloorPlanImage {
  id        String   @id @default(uuid())
  floorId   String   @unique
  imageUrl  String   // Supabase storage URL
  scale     Float    @default(1) // Pixels per foot
  offsetX   Float    @default(0)
  offsetY   Float    @default(0)
  rotation  Float    @default(0)
  opacity   Float    @default(0.5)
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  floor Floor @relation(fields: [floorId], references: [id], onDelete: Cascade)

  @@map("floor_plan_images")
}

// Rooms
model Room {
  id        String   @id @default(uuid())
  floorId   String
  name      String
  positionX Float?
  positionY Float?
  width     Float?
  height    Float?
  createdAt DateTime @default(now())

  // Relations
  floor   Floor    @relation(fields: [floorId], references: [id], onDelete: Cascade)
  devices Device[]

  @@map("rooms")
}

// Devices (outlets, fixtures, appliances)
model Device {
  id                String   @id @default(uuid())
  roomId            String
  breakerId         String?
  type              String // outlet, fixture, switch, appliance, hardwired
  subtype           String? // ceiling_light, recessed, etc.
  description       String
  positionX         Float?
  positionY         Float?
  placement         String   @default("wall") // floor, wall, ceiling
  heightFromFloor   Float?   // Height in inches from floor (e.g., 48 for standard outlet)
  estimatedWattage  Int?
  isGfciProtected   Boolean  @default(false)
  notes             String?
  photoUrl          String?
  createdAt         DateTime @default(now())

  // Relations
  room    Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  breaker Breaker? @relation(fields: [breakerId], references: [id], onDelete: SetNull)

  @@map("devices")
}
